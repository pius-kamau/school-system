<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student</title>
    <style>
        /* ... (use same styles as form.ejs, add the photo upload styles too) ... */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .form-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            overflow: hidden;
        }
        
        .form-header {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
            padding: 25px;
            text-align: center;
        }
        
        .form-header h1 {
            font-size: 24px;
            font-weight: 600;
        }
        
        .form-content {
            padding: 30px;
        }
        
        .current-photo {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .current-photo img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #f59e0b;
            margin-bottom: 10px;
        }
        
        .current-photo p {
            color: #6b7280;
            font-size: 14px;
        }
        
        .photo-upload {
            border: 2px dashed #d1d5db;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            transition: border-color 0.3s ease;
            cursor: pointer;
        }
        
        .photo-upload:hover {
            border-color: #f59e0b;
        }
        
        .photo-preview {
            display: none;
            max-width: 200px;
            margin: 20px auto;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .photo-preview img {
            width: 100%;
            height: auto;
            display: block;
        }
        
        .file-input {
            display: none;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #374151;
            font-weight: 500;
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }
        
        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #f59e0b;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e5e7eb;
        }
        
        .btn {
            flex: 1;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            text-decoration: none;
        }
        
        .btn-submit {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(245, 158, 11, 0.4);
        }
        
        .btn-cancel {
            background: #6b7280;
            color: white;
        }
        
        .btn-cancel:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(107, 114, 128, 0.4);
        }
        
        .remove-photo-btn {
            background: #ef4444;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            margin-top: 10px;
        }
        
        .required::after {
            content: " *";
            color: #ef4444;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1>‚úèÔ∏è Edit Student</h1>
        </div>
        
        <form action="/students/edit/<%= student.id %>" method="POST" class="form-content" id="studentForm" enctype="multipart/form-data">
            <!-- Current Photo -->
            <% if (student.photo) { %>
                <div class="current-photo">
                    <img src="<%= student.photo %>" alt="Current Photo">
                    <p>Current Photo</p>
                    <button type="button" class="remove-photo-btn" onclick="removeCurrentPhoto()">Remove Current Photo</button>
                    <input type="hidden" name="remove_photo" id="removePhoto" value="false">
                </div>
            <% } %>
            
            <!-- Photo Upload -->
            <div class="photo-upload" onclick="document.getElementById('photoInput').click()">
                <div>üì∑</div>
                <h3><%= student.photo ? 'Change Photo' : 'Upload Student Photo' %></h3>
                <p>Click to select a photo (JPG, PNG, GIF - max 5MB)</p>
                <input type="file" name="photo" id="photoInput" class="file-input" accept="image/*" onchange="previewPhoto(event)">
            </div>
            
            <div class="photo-preview" id="photoPreview">
                <img id="previewImage" src="" alt="Photo Preview">
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label class="required">Full Name</label>
                    <input type="text" name="name" value="<%= student.name %>" placeholder="Enter student's full name" required>
                </div>
                
                <div class="form-group">
                    <label>Gender</label>
                    <select name="gender">
                        <option value="">Select Gender</option>
                        <option value="Male" <%= student.gender === 'Male' ? 'selected' : '' %>>Male</option>
                        <option value="Female" <%= student.gender === 'Female' ? 'selected' : '' %>>Female</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label class="required">Class/Grade</label>
                <input type="text" name="class" value="<%= student.class || '' %>" placeholder="e.g., Grade 6, Form 2" required>
            </div>
            
            <div class="form-group">
                <label>Guardian's Name</label>
                <input type="text" name="guardian_name" value="<%= student.guardian_name || '' %>" placeholder="Enter guardian's name">
            </div>
            
            <div class="form-group">
                <label>Date of Birth</label>
                <input type="date" name="dob" value="<%= student.dob || '' %>">
            </div>
            
            <div class="form-actions">
                <a href="/students" class="btn btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-submit">Update Student</button>
            </div>
        </form>
    </div>

    <script>
        function previewPhoto(event) {
            const input = event.target;
            const preview = document.getElementById('photoPreview');
            const previewImage = document.getElementById('previewImage');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    preview.style.display = 'block';
                    
                    // Show file info
                    const file = input.files[0];
                    const fileSize = (file.size / 1024 / 1024).toFixed(2);
                    document.querySelector('.photo-upload p').textContent = 
                        `${file.name} (${fileSize} MB) - Click to change`;
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        function removeCurrentPhoto() {
            if (confirm('Are you sure you want to remove the current photo?')) {
                document.getElementById('removePhoto').value = 'true';
                document.querySelector('.current-photo').style.display = 'none';
                document.querySelector('.photo-upload h3').textContent = 'Upload Student Photo';
            }
        }
        
        // File size validation
        document.getElementById('photoInput').addEventListener('change', function() {
            const file = this.files[0];
            const maxSize = 5 * 1024 * 1024;
            
            if (file && file.size > maxSize) {
                alert('File size exceeds 5MB limit. Please choose a smaller file.');
                this.value = '';
                document.getElementById('photoPreview').style.display = 'none';
                document.querySelector('.photo-upload p').textContent = 
                    'Click to select a photo (JPG, PNG, GIF - max 5MB)';
            }
        });
        
        // Form validation
        document.getElementById('studentForm').addEventListener('submit', function(e) {
            const name = document.getElementsByName('name')[0];
            const studentClass = document.getElementsByName('class')[0];
            
            if (!name.value.trim() || !studentClass.value.trim()) {
                e.preventDefault();
                alert('Please fill in all required fields (Name and Class)');
            }
        });
    </script>
</body>
</html>