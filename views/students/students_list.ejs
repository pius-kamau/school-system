<div class="section">
  <h2>Student List</h2>
  <a
    href="/students/add"
    style="
      background: #ff416c;
      color: #fff;
      padding: 10px 18px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
    "
    >+ Add New Student</a
  >

  <table
    border="1"
    cellpadding="8"
    cellspacing="0"
    style="margin-top: 20px; width: 100%; border-collapse: collapse"
  >
    <thead style="background: #2e0854; color: white">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Class</th>
        <th>Guardian</th>
        <th>Date of Birth</th>
      </tr>
    </thead>
    <tbody>
      <% if (students && students.length > 0) { %> <% students.forEach(s => { %>
      <tr>
        <td><%= s.id %></td>
        <td><%= s.name %></td>
        <td><%= s.gender %></td>
        <td><%= s.class %></td>
        <td><%= s.guardian_name %></td>
        <td><%= s.dob %></td>
      </tr>
      <% }) %> <% } else { %>
      <tr>
        <td colspan="6" align="center">No students found.</td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
