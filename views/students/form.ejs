<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= student ? 'Edit Student' : 'Add New Student' %></title>
    <style>
        :root {
            --primary: #ff416c;
            --bg-dark: #1a0033;
            --text-light: #f8fafc;
            --card-bg: #ffffff;
            --body-bg: #f8fafc;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', Arial, sans-serif;
        }

        body {
            background-color: var(--body-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .form-container {
            background: var(--card-bg);
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
            overflow: hidden;
        }

        .form-header {
            background: var(--primary);
            color: var(--text-light);
            padding: 25px;
            text-align: center;
        }

        .form-header h1 {
            font-size: 22px;
            font-weight: 600;
        }

        .form-content {
            padding: 30px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333333;
            font-weight: 500;
            font-size: 14px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.3s;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary);
        }

        .required::after {
            content: " *";
            color: #ef4444;
        }

        /* Photo Upload */
        .photo-upload {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 30px;
            text-align: center;
            margin-bottom: 20px;
            cursor: pointer;
            transition: border-color 0.3s;
        }

        .photo-upload:hover {
            border-color: var(--primary);
        }

        .photo-preview {
            display: none;
            max-width: 150px;
            margin: 20px auto;
            border-radius: 8px;
            overflow: hidden;
        }

        .photo-preview img {
            width: 100%;
            height: auto;
            display: block;
        }

        .file-input {
            display: none;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eaeaea;
        }

        .btn {
            flex: 1;
            padding: 14px;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }

        .btn-submit {
            background: var(--primary);
            color: var(--text-light);
        }

        .btn-submit:hover {
            opacity: 0.9;
        }

        .btn-cancel {
            background: #6b7280;
            color: var(--text-light);
        }

        .btn-cancel:hover {
            opacity: 0.9;
        }

        /* Current Photo */
        .current-photo {
            text-align: center;
            margin-bottom: 20px;
        }

        .current-photo img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary);
            margin-bottom: 10px;
        }

        .remove-photo-btn {
            background: #ef4444;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 13px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1><%= student ? 'âœï¸ Edit Student' : 'âž• Add New Student' %></h1>
        </div>
        
        <form action="<%= student ? '/students/edit/' + student.id : '/students/new' %>" 
              method="POST" 
              class="form-content" 
              id="studentForm" 
              enctype="multipart/form-data">
            
            <% if (student && student.photo) { %>
                <div class="current-photo">
                    <img src="<%= student.photo %>" alt="Current Photo">
                    <button type="button" class="remove-photo-btn" onclick="removeCurrentPhoto()">
                        Remove Photo
                    </button>
                    <input type="hidden" name="remove_photo" id="removePhoto" value="false">
                </div>
            <% } %>

            <!-- Photo Upload -->
            <div class="photo-upload" onclick="document.getElementById('photoInput').click()">
                <div style="font-size: 48px; margin-bottom: 15px; color: #666;">
                    ðŸ“·
                </div>
                <h3><%= student && student.photo ? 'Change Photo' : 'Upload Student Photo' %></h3>
                <p>Click to select a photo (JPG, PNG, GIF - max 5MB)</p>
                <input type="file" name="photo" id="photoInput" class="file-input" accept="image/*" onchange="previewPhoto(event)">
            </div>
            
            <div class="photo-preview" id="photoPreview">
                <img id="previewImage" src="" alt="Photo Preview">
            </div>

            <!-- Basic Information -->
            <div class="form-row">
                <div class="form-group">
                    <label class="required">Full Name</label>
                    <input type="text" name="name" 
                           value="<%= student ? student.name : '' %>" 
                           placeholder="Enter student's full name" 
                           required>
                </div>
                
                <div class="form-group">
                    <label class="required">Class/Grade</label>
                    <input type="text" name="class" 
                           value="<%= student ? student.class : '' %>" 
                           placeholder="e.g., Grade 6, Form 2" 
                           required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Gender</label>
                    <select name="gender">
                        <option value="">Select Gender</option>
                        <option value="Male" <%= student && student.gender === 'Male' ? 'selected' : '' %>>Male</option>
                        <option value="Female" <%= student && student.gender === 'Female' ? 'selected' : '' %>>Female</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" name="dob" 
                           value="<%= student ? student.dob : '' %>">
                </div>
            </div>

            <!-- Guardian Information -->
            <div class="form-row">
                <div class="form-group">
                    <label>Guardian's Name</label>
                    <input type="text" name="guardian_name" 
                           value="<%= student ? student.guardian_name : '' %>" 
                           placeholder="Enter guardian's name">
                </div>
                
                <div class="form-group">
                    <label>Guardian's Phone</label>
                    <input type="tel" name="guardian_phone" 
                           value="<%= student ? student.guardian_phone : '' %>" 
                           placeholder="Enter guardian's phone">
                </div>
            </div>

            <!-- Contact Information -->
            <div class="form-row">
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="email" 
                           value="<%= student ? student.email : '' %>" 
                           placeholder="Enter email address">
                </div>
                
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="tel" name="phone" 
                           value="<%= student ? student.phone : '' %>" 
                           placeholder="Enter phone number">
                </div>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label>Address</label>
                <textarea name="address" rows="3" 
                          placeholder="Enter complete address"><%= student ? student.address : '' %></textarea>
            </div>

            <!-- Status -->
            <div class="form-group">
                <label>Status</label>
                <select name="status">
                    <option value="Active" <%= student && student.status === 'Active' ? 'selected' : '' %>>Active</option>
                    <option value="Inactive" <%= student && student.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                    <option value="Graduated" <%= student && student.status === 'Graduated' ? 'selected' : '' %>>Graduated</option>
                    <option value="Transferred" <%= student && student.status === 'Transferred' ? 'selected' : '' %>>Transferred</option>
                </select>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <a href="/students" class="btn btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-submit">
                    <%= student ? 'Update Student' : 'Save Student' %>
                </button>
            </div>
        </form>
    </div>

    <script>
        function previewPhoto(event) {
            const input = event.target;
            const preview = document.getElementById('photoPreview');
            const previewImage = document.getElementById('previewImage');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    preview.style.display = 'block';
                    
                    // Show file info
                    const file = input.files[0];
                    const fileSize = (file.size / 1024 / 1024).toFixed(2);
                    document.querySelector('.photo-upload p').textContent = 
                        `${file.name} (${fileSize} MB) - Click to change`;
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeCurrentPhoto() {
            if (confirm('Remove current photo?')) {
                document.getElementById('removePhoto').value = 'true';
                document.querySelector('.current-photo').style.display = 'none';
                document.querySelector('.photo-upload h3').textContent = 'Upload Student Photo';
            }
        }

        // File size validation
        document.getElementById('photoInput').addEventListener('change', function() {
            const file = this.files[0];
            const maxSize = 5 * 1024 * 1024; // 5MB
            
            if (file && file.size > maxSize) {
                alert('File size exceeds 5MB limit. Please choose a smaller file.');
                this.value = '';
                document.getElementById('photoPreview').style.display = 'none';
                document.querySelector('.photo-upload p').textContent = 
                    'Click to select a photo (JPG, PNG, GIF - max 5MB)';
            }
        });

        // Form validation
        document.getElementById('studentForm').addEventListener('submit', function(e) {
            const name = document.getElementsByName('name')[0];
            const studentClass = document.getElementsByName('class')[0];
            
            if (!name.value.trim() || !studentClass.value.trim()) {
                e.preventDefault();
                alert('Please fill in all required fields (Name and Class)');
            }
        });
    </script>
</body>
</html>